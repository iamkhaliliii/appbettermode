{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "api",
      "rootDir": "..",
      "noEmit": false,
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "allowImportingTsExtensions": false,
      "target": "es2022",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": "..", 
      "paths": {
        "@/*": ["./server/*"]
        // "@shared/*": ["../shared/*"], // <--- REMOVE OR COMMENT OUT
        // "shared/*": ["../shared/*"]    // <--- REMOVE OR COMMENT OUT
      }
    },
    "include": [
      "./**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts"
    ]
  }