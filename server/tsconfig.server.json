{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".",
      "noEmit": false,
      "module": "esnext",
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": false,
      "target": "es2022",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": ".", 
      "paths": {}
    },
    "include": [
      "./**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "**/*.spec.ts",
      "./dist"
    ]
  }