{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "devCommand": "npm run dev",
  "rewrites": [
    { "source": "/api/v1/:path*", "destination": "/api/v1" },
    { "source": "/api", "destination": "/api/api.js" },
    { "source": "/test-vercel", "destination": "/api/api.js" },
    { "source": "/:file(.*\\.(?:js|css|png|jpg|jpeg|svg|ico|json))", "destination": "/:file" },
    { "source": "/dashboard/site/:siteId/(appearance|app-store|billing|content|design-studio|people|reports|settings|site-config).*", "destination": "/index.html" },
    { "source": "/dashboard/:path*", "destination": "/index.html" },
    { "source": "/sites/:path*", "destination": "/index.html" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
} 