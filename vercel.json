{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": "vite",
  "devCommand": "npm run dev",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { 
      "src": "/api/v1/sites(.*)", 
      "dest": "/api/v1/sites.js" 
    },
    { 
      "src": "/api/health", 
      "dest": "/api/health.js" 
    },
    { 
      "src": "/test-vercel", 
      "dest": "/api/index.js" 
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/api/index.js" 
    },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|svg|ico|json))", "dest": "/$1" },
    { "src": "/dashboard/site/[^/]+/(appearance|app-store|billing|content|design-studio|people|reports|settings|site-config).*", "dest": "/index.html" },
    { "src": "/dashboard.*", "dest": "/index.html" },
    { "src": "/sites.*", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 